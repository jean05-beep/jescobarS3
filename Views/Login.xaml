<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jescobarS3.Views.Login"
             Title="Login">
    <StackLayout Padding="30" VerticalOptions="Center">
        <!-- Imagen del logo -->
        <Image Source="uisrael.png" HeightRequest="100" HorizontalOptions="Center" />

        <Label Text="Login" FontSize="30" HorizontalOptions="Center" Margin="0,20,0,0"/>

        <Entry x:Name="usernameEntry" Placeholder="Usuario" />
        <Entry x:Name="passwordEntry" Placeholder="Contraseña" IsPassword="True" />

        <Button Text="Iniciar Sesión" Clicked="OnLoginClicked"/>
    </StackLayout>
</ContentPage>